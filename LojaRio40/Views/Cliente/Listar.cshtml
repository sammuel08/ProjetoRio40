@model IEnumerable<LojaRio40.Models.Cliente>

@{
    ViewData["Title"] = "Listar";
}

<h1>Listar</h1>

<p>
    
    <a asp-controller="Cliente" asp-action="Cadastrar">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.CPF }) |
                    @Html.ActionLink("Deletar", "Deletar", new { id = item.CPF }, new { onclick = "return confirm('Deseja excluir');" })
                </td>
            </tr>
        }
    </tbody>
</table>