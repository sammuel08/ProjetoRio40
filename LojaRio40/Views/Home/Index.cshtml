@{
    ViewData["Title"] = "Início - Rio40Graus";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        header.hero {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1521334884684-d80222895322?auto=format&fit=crop&w=1350&q=80') center/cover no-repeat;
            color: white;
            text-shadow: 1px 1px 4px rgba(0,0,0,0.6);
        }

        .stat-card {
            background: #fff;
            border-radius: 0.75rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="bg-light">

    <!-- seçao principal -->
    <header class="hero py-5 text-center shadow-sm">
        <div class="container">
            <h1 class="display-5 fw-bold">Bem-vindo ao Sistema Rio40Graus</h1>
            <p class="lead">Gerencie clientes, produtos, fornecedores e vendas de forma prática e organizada.</p>
            <a class="btn btn-light btn-lg fw-semibold mt-3 shadow-sm" asp-area="" asp-controller="Produto" asp-action="Listar">Acessar o Sistema</a>
            
        </div>
    </header>

    <!-- Cards de Acesso -->
    <section class="container my-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-people fs-1 text-primary mb-3"></i>
                        <h5 class="card-title fw-bold text-primary">Clientes</h5>
                        <p class="card-text">Cadastre e gerencie clientes pessoa física e jurídica.</p>
                        <a class="btn btn-outline-primary" asp-area="" asp-controller="Cliente" asp-action="Cadastrar">Acessar</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-bag fs-1 text-success mb-3"></i>
                        <h5 class="card-title fw-bold text-success">Produtos</h5>
                        <p class="card-text">Cadastre e gerencie o Produto e controle de estoque</p>
                        <a class="btn btn-outline-primary" asp-area="" asp-controller="Produto" asp-action="Cadastrar">Acessar</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-cash-coin fs-1 text-warning mb-3"></i>
                        <h5 class="card-title fw-bold text-warning">Vendas</h5>
                        <p class="card-text">Registre e acompanhe as vendas e notas fiscais.</p>
                        <a href="/Venda" class="btn btn-outline-warning">Acessar</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Estatísticas (Cards de Resumo) -->
    <section class="container mb-5">
        <h3 class="text-center mb-4 fw-bold text-dark">Resumo Geral</h3>
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="stat-card p-4">
                    <i class="bi bi-person-lines-fill fs-2 text-primary mb-2"></i>
                    <h5 class="fw-bold">120 Clientes</h5>
                    <small class="text-muted">Cadastrados no sistema</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card p-4">
                    <i class="bi bi-box-seam fs-2 text-success mb-2"></i>
                    <h5 class="fw-bold">250 Produtos</h5>
                    <small class="text-muted">Em estoque</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card p-4">
                    <i class="bi bi-receipt fs-2 text-warning mb-2"></i>
                    <h5 class="fw-bold">85 Vendas</h5>
                    <small class="text-muted">Registradas este mês</small>
                </div>
            </div>
        </div>
    </section>

    <!-- Rodapé -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">&copy; 2025 - Rio40Graus | Projeto ETEC Basilides de Godoy</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>